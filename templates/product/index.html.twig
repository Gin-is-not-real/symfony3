{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ref</th>
                <th>Price</th>
                <th>Advice</th>
                <th>Purchase_date</th>
                <th>Warranty_en_date</th>
                <th>Manual</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.ref }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.advice }}</td>
                <td>{{ product.purchaseDate ? product.purchaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.warrantyEndDate ? product.warrantyEndDate|date('Y-m-d') : '' }}</td>

                {% if product.manual is defined %}
                    <td><a href="{{ asset('upload/' ~  product.manual ) }}" onclick="window.open(this.href); return false;">{{ product.manual }}</a></td>
                {% endif %}
                
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
